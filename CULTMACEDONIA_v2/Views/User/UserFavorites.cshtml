@model IEnumerable<CULTMACEDONIA_v2.Models.PointUserFavoriteViewModel>

@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "UserFavorites";
}




@Html.Partial("_PageHeader")
<div id="wrap">
    <div class="container panel offset-top">
        <div class="row ">


            <div class="container row favlist-header">
                <div class="col-lg-4">




                    <div data-bind="if: isEmpty()">
                        <img data-bind="attr:{'src': 'data:image/png;base64,'}" class=" media-object"
                             style="width: 253px; height: 189px; padding-top:5px; padding-bottom:5px; " />
                    </div>

                    <div data-bind="if: !isEmpty()">
                        <img data-bind="attr:{'src':  userfavorites()[0].OneImagePath}" class=" media-object " style="width: 253px; height: 189px; padding-top: 5px; padding-bottom: 5px;" />
                    </div>






                </div>
                <div class="col-lg-8">

                    <div class="row">
                        <div class="col-lg-12"><h3>@CultResources.View.FavoriteSights</h3></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @CultResources.View.fromUser @User.Identity.GetUserName() -
                            <span data-bind="text:userfavorites().length == 1 ?  userfavorites().length + ' sight': userfavorites().length + ' sights'"></span>
                        </div>
                    </div>
                </div>


            </div>
            <p class="text-center no-favlist-items text-muted" data-bind="visible:isEmpty()">@CultResources.View.noFavoriteSights</p>


            <div class="container" id="over" data-bind="visible: false">

                <span class="Centerer"></span>

                <img src="~/Content/images/loading.GIF" />
            </div>







            <div id="favlist" class="container" style="display: none" data-bind=" foreach: userfavorites,visible: true">

                <div class="row favitem">
                    <div class="col-lg-1 vcenter"><span data-bind="text:$index() + 1"></span></div>
                    <div class="col-lg-2 ">
                        <img data-bind="attr:{'src':  OneImagePath}" class=" media-object" style="width: 64px; height: 64px; " />
                    </div>
                    <div class="col-lg-6 vcenter">
                        <a data-toggle="tooltip" data-placement="right"
                           title="" data-original-title="@CultResources.View.view" class="action-links tlp favitem-link" data-bind="text: PointName,attr: { 'href': '@Url.Action("View","Points")/' + PointId }">

                        </a>
                    </div>
                    <div class="col-lg-3 ">

                        <a href="" class="un-favitem top-right btn btn-default btn-sm"
                           style="display:none"
                           data-bind="click: $root.unFavorite"><span class="fa fa-times" ></span></a>




                    </div>






                </div>


            </div>




        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/knockout-3.0.0.debug.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.debug.js"></script>
    <script src="~/Scripts/ko-pointsuserfav.js"></script>
    <script>
        $(function () {


            $('.tlp').tooltip();

            $("#favlist").on({
                mouseenter: function () {
                    $(this).find(".un-favitem").show();
                },
                mouseleave: function () {
                    $(this).find(".un-favitem").hide();
                }
            }, 'div');

        });
    </script>
}


