<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans&subset=latin,greek' rel='stylesheet' type='text/css'>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

  
    @Scripts.Render("~/cultmaced/modernizr")
    @Scripts.Render("~/cultmaced/jquery")
    @Scripts.Render("~/cultmaced/bootstrap")

    <link href="~/Content/font-awesome/font-awesome.css" rel="stylesheet" />


    @RenderSection("styles", false)


    <link href="~/Content/css/dashboard/cm-admin.css" rel="stylesheet" />

    <!-- styles extraaaaa todo BUNDLE-->

    <link href="~/Content/css/cultmaced.general.css" rel="stylesheet" />
    <link href="~/Content/css/flags.css" rel="stylesheet" />


    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false'></script>
    <script src="~/Scripts/jquery.pagifymvc-1.0.0.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <style>
        .infoDiv {
            height: 200px;
            width: 300px;
            -webkit-user-select: none;
            background-color: white;
        }
    </style>
</head>
<body class="cult-admin">

    <div id="wrapper">


        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href=@Url.Action("Index","Home") class="navbar-brand">

                    <span class="one">@CultResources.Shared.AppName</span>
                    <span class="two">@CultResources.Shared.AppSurname</span>

                </a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">

                <li class="dropdown pull-right">
                    @Html.Partial("_LoginPartial")
                </li>

                
                <!-- lang .dropdown -->
                @Html.Partial("_CultureChooserUserControl")


                <!-- /.dropdown -->




            </ul>
            <!-- /.navbar-top-links -->
                @*Φορτώνουμε τo partial view που δημιουργήσαμε για την επιλογή γλώσσας*@
                @*@Html.Partial("_CultureChooserUserControl")*@

            
            


            <div class="navbar-default navbar-static-side" role="navigation">

                <div class="sidebar-collapse">

                    <ul class="nav" id="side-menu">
                        <li><a href="#"><i class="fa fa-dashboard"></i> @CultResources.Shared.Dashboard</a></li>
                        <li><a href="@Url.Action("Points","Admin")">@CultResources.Admin.PointsAll</a></li>
                        <li><a href="@Url.Action("Points", "Admin", new { enabled = false })">@CultResources.Admin.PointsNeedApproval</a></li>

                        <li><a href="#">@CultResources.Admin.UserManagement</a></li>
                        <li><a href="#">@CultResources.Admin.SystemParameters</a></li>
                        <li><a href="#">Link</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                    <!-- /#side-menu -->

                </div>
                <!-- /.sidebar-collapse -->
                @*@Html.Partial("_LoginPartial")*@
            </div>
            <!-- /.navbar-static-side -->

        </nav>


        <!-- Page content -->
        <div id="page-wrapper">


            @RenderBody()

        </div>

    </div>

    <!-- JavaScript -->
    <!-- Custom JavaScript for the Menu Toggle -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("active");
        });
    </script>

    <script src="~/Content/scripts/admin/jquery.metisMenu.js"></script>

    <!-- plugin based scripts -->

 

    <script src="~/Content/scripts/admin/sb-admin.js"></script>




    @RenderSection("scripts", false)





</body>
</html>
