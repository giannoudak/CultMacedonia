<!-- navigation bar -->



<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href=@Url.Action("Index","Home") title="@CultResources.Shared.AppName@CultResources.Shared.AppSurname" class="navbar-brand">
                <span class="one">@CultResources.Shared.AppName</span>
                <span class="two">@CultResources.Shared.AppSurname</span>
            </a>


            

            @{
                string controller = @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
                string action = @HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
            }

           

        </div>
        <!-- make navigation links togglable -->
        <div class="navbar-collapse collapse ">

            <ul class="nav navbar-nav col-lg-10">

                @if (controller.Equals("Home") && action.Equals("Index"))
                {


                    <li>@Html.ActionLink(@CultResources.Shared.About, "about", "Home")</li>
                    <li><a href="#points">@CultResources.Shared.Points</a></li>
                    <li><a href="#mobile">@CultResources.Shared.Mobile</a></li>
                    <li><a href="#contact">@CultResources.Shared.Contact</a></li>

                }

                <li class="dropdown pull-right">
                    @Html.Partial("_LoginPartial")
                </li>

                @if ( (controller == "Home" &&      ( action == "Index" || action == "About" )) ||
                      (controller == "Account" &&   ( action == "Register" || action == "Login"))  )
                {

                    @Html.Partial("_CultureChooserUserControl")
                }


            </ul>
            
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>