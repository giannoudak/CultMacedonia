    @section scripts {
        <script src="~/Scripts/knockout-3.0.0.debug.js"></script>
        <script src="~/Scripts/knockout.mapping-latest.debug.js"></script>
        <!-- Custom JavaScript for the Side Menu and Smooth Scrolling -->

        <script>
            $(function () {


                $('.carousel-control.left').click(function () {

                    $('#carousel-example-captions').carousel('prev');
                });

                $('.carousel-control.right').click(function () {

                    $('#carousel-example-captions').carousel('next');
                });

                $('#points').pagify({
                    dataUrl: '@Url.Action("GetPointList", "Points")',
                    callBack: function () {
                        // Ajax remove preloader and some other callbacks
                        //$('#loading').hide();
                    },
                    pageSize: 4,
                    beforeSend: function () {
                        // Ajax show preloader and some other function before start
                        //$('#loading').show();
                    }
                });


                $('a[href*=#]:not([href=#])').click(function () {
                    if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '')
                      || location.hostname == this.hostname) {

                        var target = $(this.hash);

                        //var s = $("#restContent").offset().top;


                        target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');



                        if (target.length) {
                            $('html,body').animate({
                                scrollTop: target.offset().top - 100 + 50
                            }, 1000);
                            return false;
                        }
                    }
                });
            });



        </script>
    }













