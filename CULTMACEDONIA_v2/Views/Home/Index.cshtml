@{
    ViewBag.Title = @CultResources.Shared.HomeView;
}
@using CULTMACEDONIA_v2.Helpers;


@Html.Partial("_PageHeader")

<div id="wrap">


    <div class="intro-header map-points ">
        @Html.Partial("vMapPartial")
    </div>
    <!-- /.intro-header -->


    <div class="banner content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h1>@CultResources.Shared.AppName @CultResources.Shared.AppSurname!</h1>
                    <h3>@CultResources.Shared.AppSlogan</h3>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a role="button" href=@Url.Action("search","points") class="btn btn-lg btn-primary">@CultResources.Shared.ViewPoints</a>
                        </li>
                        <li>
                            <a role="button" href=@Url.Action("new","points") class="btn btn-lg btn-success">@CultResources.Shared.AddPoints</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->


    <div class="content-section-b">
        <div class="container">

            <div id="points" class="row">
                <h3 class="page-header">@CultResources.View.Monuments <small></small></h3>

                <div data-bind="foreach: Items">

                    <div class="col-lg-3">

                        <div class="thumbnail">
                            <div data-bind="foreach: pointImages" class="thumbnail">
                                <img data-bind="attr:{'src':  ImagePath}" class="item-preview" />
                            </div>
                            <div class="caption">
                                <h3 class="item-name" data-bind="text: PointName"></h3>
                                <p>This would be a great spot to feature some brand new products!</p>
                                <p><a class="btn btn-primary" data-bind="attr: { 'href': '@Url.Action("View","Points")/' + PointId }">@CultResources.View.ViewMonument!</a></p>
                            </div>
                        </div>


                    </div>


                </div>

                <div class="row">
                    <div class="col-md-6">
                        @CultResources.View.Page <span data-bind="text: MetaData.PageNumber"></span> @CultResources.View.of <span data-bind="text: MetaData.PageCount"></span>
                        <span>@Html.ActionLink(@CultResources.Shared.ViewAll, "Index", "Points") </span>
                    </div>
                    <div class="col-md-6">
                        <ul class="pagination pull-right">
                            <li><a style="display: none;" data-bind="click: FirstPage, visible: MetaData.HasPreviousPage" href="javascript:void(0);">@CultResources.View.First</a></li>
                            <li><a style="display: none;" data-bind="click: PreviousPage, visible: MetaData.HasPreviousPage" href="javascript:void(0);">< @CultResources.View.Prev</a></li>
                            <li><a style="display: none;" data-bind="click: NextPage, visible: MetaData.HasNextPage" href="javascript:void(0);">@CultResources.View.Next ></a></li>
                            <li><a style="display: none;" data-bind="click: LastPage, visible: MetaData.HasNextPage" href="javascript:void(0);">@CultResources.View.Last</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-b -->

